@using Complains_System.Catalog.Department;
@model Complains_System.Catalog.Admin.ComplainsManagement.ReportForDepartment
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link rel="stylesheet" href="~/statistical/css/style.css" />
<div class="container">
    @using (Html.BeginForm("ReportforDepartment", "HomePage", "POST"))
    {
        <div class="row date-group">

            <div class="getdate">
                <b>Từ Ngày:</b>
                <input class="input-date" type="date" name="startdate">
            </div>
            <div class="getdate">
                <b>Đến Ngày:</b>
                <input class="input-date" type="date" name="enddate">
            </div>
            <div class="getdate">
                <b>Chọn Phòng Ban:</b>
                <select class="form-select input-date" name="khoa" id="khoa">
                    @foreach (var item in ViewData["Khoa"] as List<ListDepartments>)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>
            </div>
            <div class="getdate">
                <button type="submit" class="btn btn-primary ">Lọc Dữ Liệu</button>
            </div>
        </div>
    };


    <hr>
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
