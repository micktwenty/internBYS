<body>
    <div class="d-flex align-items-center">
        <div class="col-8">
            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" asp-action="finduser" asp-controller="UsersManagement" method="post">
                <div class="input-group">
                    <input id="search-height" type="text" class="form-control bg-light border-0 small"
                           name="keyword" placeholder="Tìm kiếm..." aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button id="btn-search" class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-4 d-flex justify-content-center" style="margin: 0 0 0 0">
            <button class="btn btn-success btn-save" type="submit">LƯU</button>
        </div>

    </div>


    <div class="row mr-4 ml-4">
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="table-info">
                    <th scope="col">Tên tài khoản</th>
                    <th scope="col">Tình trạng</th>
                    <th scope="col" colspan="3">Hành động</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@item.username</th>
                    <td>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                            <label class="custom-control-label" for="customSwitch1"></label>
                        </div>
                    </td>
                    <td><a asp-action="Permiting" asp-controller="UsersManagement" asp-route-id="@item.username"><label for="nav-input" class="btn btn-primary">Cấp quyền</label></a></td>
                    <td><a asp-action="ResetPassword" asp-controller="UsersManagement" asp-route-id="@item.username"><button class="btn btn-danger">Đặt lại mật khẩu</button></a></td>
                    <td><a asp-action="delete" asp-controller="UsersManagement" asp-route-id="@item.username"><button class="btn btn-danger">Xoá</button></a></td>

                </tr>

                }
            </tbody>
        </table>
    </div>

