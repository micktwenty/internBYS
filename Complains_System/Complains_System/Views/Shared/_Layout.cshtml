    <link rel="stylesheet" href="~/assets/homepage/css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="header shadow">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <div><a href="~/"><img id="logo" src="~/assets/homepage/img/logo-dc.png"></a></div>
                </div>
                <div class="col-7">
                    <nav class="navbar ">
                        <form class="search">
                            <div class="col-10">
                                <input class="form-control mr-sm-2" type="search" placeholder="Nhập từ khóa"
                                    aria-label="Search">
                            </div>
                            <div id="search" class=" col-2 ">
                                <button class="btn btn-search " type="submit">Tìm kiếm</button>
                            </div>
                        </form>
                    </nav>
                </div>
                <div class="col-3 navbar dropdown">
                    @if (TempData["Name"] != null)
                    {
                        <button id="xinchao" class="btn dropdown-toggle " data-toggle="dropdown">Xin chào @TempData["Name"]!</button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">
                                <img class="nav-icon" src="~/assets/img/key.png"><span>Đổi mật khẩu</span>
                            </a>
                            <a class="dropdown-item" asp-action="logout" asp-controller="users">
                                <img class="nav-icon" src="~/assets/img/log-out.png"><span>Đăng xuất</span>
                            </a>
                        </div>
                    }
                    @if (TempData["Name"] == null)
                    {
                        <a class="dropdown-item" asp-action="login" asp-controller="users">
                            <img class="nav-icon" src="~/assets/img/log-out.png"><span>Đăng nhập!</span>
                        </a>
                    }

                </div>

            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h3 class="footer-section-title">Trường Đại Học</h3>
                    <ul class="footer-title-li">
                        <li><a href="#">Trang Web Chính</a></li>
                        <li><a href="#">Bản Đồ</a></li>
                        <li><a href="#">Thông Tin Liên Hệ</a>Thông Tin Liên Hệ</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h3 class="footer-section-footer"> Tuyển Sinh</h3>
                    <ul class="footer-title-li">
                        <li><a href="#">Kế Hoạch Tuyển Sinh</a></li>
                        <li><a href="#">Các Chương Trình Đào Tạo</a></li>
                        <li><a href="#">Tư Vấn Tuyển Sinh</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h3 class="footer-section-footer">Các Liên Kết Khác</h3>
                    <ul class="footer-title-li">
                        <li><a href="#">E-Learning</a></li>
                        <li><a href="#">Thư Viện</a></li>
                        <li><a href="#">Email</a></li>
                    </ul>
                </div>
                <div class="icon col-md-3">

                    <a href="#"><img class="list-icon" src="~/assets/homepage/img/facebook.png"></a>
                    <a href="#"><img class="list-icon" src="~/assets/homepage/img/radio.png"></a>
                    <a href="#"><img class="list-icon" src="~/assets/homepage/img/linkedin.png"></a>

                </div>
            </div>
            <div class="row"></div>

        </div>
        <hr>
        <section id="cliens" class="cliens section-bg">
            <div class="container-fluid">
                <div class="row link">
                    <img id="link" src="~/assets/homepage/img/link.png">
                    <b class="ml-2">Đơn Vị Liên Kết</b>
                </div>

                <div class="row" data-aos="zoom-in">

                    <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                        <img src="~/assets/homepage/img/Logo/FPT.png" class="img-fluid" alt="">
                    </div>

                    <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                        <img src="~/assets/homepage/img/Logo/bys.png" class="img-fluid" alt="">
                    </div>

                    <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                        <img src="~/assets/homepage/img/Logo/fast.png" class="img-fluid" alt="">
                    </div>

                    <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                        <img src="~/assets/homepage/img/Logo/dsa.png" class="img-fluid" alt="">
                    </div>

                    <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                        <img src="~/assets/homepage/img/Logo/TMA.png" class="img-fluid" alt="">
                    </div>
                    <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                        <img src="~/assets/homepage/img/Logo/irtech.png" class="img-fluid" alt="">
                    </div>


                </div>
                <hr>
                <div class="d-flex justify-content-center align-items-center p-3">
                    <p class="m-0">© 2022.Bản quyền Trường Đại học Kinh Tế Đà Nẵng</p>
                </div>

            </div>

        </section>


    </div>

